generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String?
  profilephoto String   @default("/assets/defaultprofilephoto.png")
  currency     String   @default("USD")
  createdAt    DateTime @default(now())

  expenses       Expense[]
  groups         Group[]
  createdGroups  Group[]         @relation("CreatedGroups")
  expensesSplits ExpenseSplit[]
  createdBills   Bill[]         @relation("CreatedBills")
  paidExpenses   GroupExpense[]

  // Friend request relations
  sentFriendRequests     FriendRequest[] @relation("SentFriendRequests")
  receivedFriendRequests FriendRequest[] @relation("ReceivedFriendRequests")

  friends  User[] @relation("UserFriends")
  friendOf User[] @relation("UserFriends")

  paidBills        Bill[]         @relation("PaidBills")
  owedExpenseItems ExpenseItem[]  @relation("OwedItems")

  //Settlement relations
  paidSettlements       BalanceSettlement[]   @relation("PaidSettlements")
  receivedSettlements   BalanceSettlement[]   @relation("ReceivedSettlements")
  settledBy             BalanceSettlement[]   @relation("SettledBy")
}

model FriendRequest {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  sender     User     @relation("SentFriendRequests", fields: [senderId], references: [id])
  receiver   User     @relation("ReceivedFriendRequests", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([senderId, receiverId])
}

model Expense {
  id          Int      @id @default(autoincrement())
  price       Decimal  @db.Decimal(10, 2)
  description String?
  currency    String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  category    String
  createdAt   DateTime @db.Date
}

model Group {
  id          Int            @id @default(autoincrement())
  name        String
  createdById Int?
  createdBy   User?          @relation("CreatedGroups", fields: [createdById], references: [id])
  createdAt   DateTime       @default(now())
  members     User[]
  expenses    GroupExpense[]
  bills       Bill[]
  settlements BalanceSettlement[]
}

model GroupExpense {
  id           Int            @id @default(autoincrement())
  title        String
  totalAmount  Decimal        @db.Decimal(10, 2)
  currency     String?
  paidById     Int
  paidBy       User           @relation(fields: [paidById], references: [id])
  groupId      Int
  group        Group          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  expenseSplit ExpenseSplit[]
  createdAt    DateTime       @default(now())
}

model ExpenseSplit {
  id             Int          @id @default(autoincrement())
  userId         Int
  user           User         @relation(fields: [userId], references: [id])
  groupExpenseId Int
  groupExpense   GroupExpense @relation(fields: [groupExpenseId], references: [id])
  amountOwed     Decimal      @db.Decimal(10, 2)
  share          Int          @default(1)
  percent        Int          @default(100)
  isPaid         Boolean      @default(false)
  paidAt         DateTime?

  @@unique([userId, groupExpenseId])
}


model Bill {
  id          Int      @id @default(autoincrement())
  description String
  totalAmount Decimal? @db.Decimal(10, 2)
  imageUrl    String?
  currency    String?
  createdAt   DateTime @default(now())

  creatorId Int
  creator   User  @relation("CreatedBills", fields: [creatorId], references: [id])
  payerId   Int
  payer     User  @relation("PaidBills", fields: [payerId], references: [id])
  groupId   Int
  group     Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  items ExpenseItem[]
}


model ExpenseItem {
  id          Int     @id @default(autoincrement())
  description String
  price       Decimal @db.Decimal(10, 2)
  billId      Int
  bill        Bill    @relation(fields: [billId], references: [id], onDelete: Cascade)
  owers       User[]  @relation("OwedItems")
}

model BalanceSettlement{
  id          Int      @id @default(autoincrement())
  groupId     Int 
  group       Group    @relation(fields:[groupId] , references: [id], onDelete: Cascade)
  payerId     Int
  payer       User     @relation("PaidSettlements", fields:[payerId], references:[id])
  receiverId  Int
  receiver    User     @relation("ReceivedSettlements", fields:[receiverId], references:[id])
  amount      Decimal  @db.Decimal(10,2)
  settledAt   DateTime @default(now())
  settledById Int
  settledBy   User     @relation("SettledBy", fields: [settledById], references:[id])
  notes       String?

  @@unique([groupId, payerId, receiverId])
  @@index([groupId])
}